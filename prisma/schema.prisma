generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid()) @map("_id")
  username String @unique
  password String

  @@map("users")
}

model Post {
  id       String    @id @default(uuid()) @map("_id")
  image    String?
  slug     String    @unique
  quote    String
  title    String
  content  String
  date     DateTime  @default(now())
  comments Comment[]

  @@map("posts")
}

model Comment {
  id      String   @id @default(uuid()) @map("_id")
  post    Post     @relation(fields: [postId], references: [id])
  postId  String
  content String
  date    DateTime @default(now())

  @@map("comments")
}

enum PreferredContactMethod {
  Either
  Email
  Phone
}

enum PreferredTime {
  Morning
  Afternoon
  Evening
  Weekends
}

model Contact {
  id                     String                 @id @default(uuid()) @map("_id")
  name                   String
  email                  String
  phone                  String
  details                String
  preferredContactMethod PreferredContactMethod @default(Either)
  preferredTime          PreferredTime          @default(Weekends)
  date                   DateTime               @default(now())

  @@map("contacts")
}
